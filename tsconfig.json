{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5", 
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "declarationDir": "types",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true, 
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es6"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "rootDirs": ["src"]
}
